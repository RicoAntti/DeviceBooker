@{
    ViewBag.Title = "kalenteri";
}

@Styles.Render("~/Content/fullcalendar.css")
@Styles.RenderFormat(@"<link href=""~/Content/fullcalendar.print.css"" rel=""stylesheet"" media=""print"" />", "~Content/css")
@Scripts.Render("~/Scripts/lib/moment.min.js")
@Scripts.Render("~/Scripts/fullcalendar.js")

<div class="row">
    <div class="col-md-6"><h2>Kalenteri</h2></div>
</div>

<div id='calendar'></div>

<div id="ReservationModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Tämä teksti korvautuu jQueryssä:</h4>
            </div>
            <div class="modal-body">
                <p>Tähän inputit</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Sulje</button>
            </div>
        </div>

    </div>
</div>

@section Footer {
    @Scripts.Render("~/Scripts/App/Models.js")
    @Scripts.Render("~/Scripts/CalendarScript.js")
    <script type="text/javascript">
    window.CalendarScript.Init(@ViewBag.deviceId);
    </script>
}